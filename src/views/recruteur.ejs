<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gérer les Offres d'Emploi - Application de Recrutement</title>
    <link rel="stylesheet" href="public/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            padding: 20px;
        }
        .job-management-container {
            background: #ffffff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .job-management-container h2 {
            margin-bottom: 20px;
        }
        .job-item {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #e0e0e0;
            border-radius: 5px;
        }
        .job-item .btn {
            margin-right: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="job-management-container">
            <h2 class="text-center">Gérer les Offres d'Emploi</h2>
            <% offers.forEach(offer => { %>
                <div class="job-item">
                    <h5><%= offer.title %></h5>
                    <p>Entreprise: <%= offer.company %></p>
                    <p>Localisation: <%= offer.city %></p>
                    <p>Type de Contrat: <%= offer.contract %></p>
                    <p>Salaire: <%= offer.minSalary * 10 %>,000€ - <%= offer.maxSalary * 10 %>,000€ / an</p>
                    <p>Description: <%= offer.description %></p>
                    <div>
                        <button class="btn btn-warning">Mettre en Pause</button>
                        <button class="btn btn-primary">Modifier</button>
                        <button class="btn btn-danger">Supprimer</button>
                    </div>
                </div>
            <% }); %>
            <a href="/creer_offre" class="btn btn-success">Nouvelle offre</a>
        </div>
    </div>
</body>
</html>
